# ============================================================
# Chatbot Administrativo LSE-FIUBA - Configuraci√≥n
# Copiar este archivo como .env y ajustar los valores
# ============================================================

# --- LLM ---
LLM_BACKEND=ollama
LLM_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434
# Para usar OpenAI (opcional):
# LLM_BACKEND=openai
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-3.5-turbo

# --- Embeddings ---
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DEVICE=cpu

# --- Chunking ---
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# --- Retrieval ---
RAG_TOP_K=5
USE_MMR=true
USE_RERANKER=true
CONFIDENCE_THRESHOLD=0.5
ABSTENTION_THRESHOLD=0.3

# --- Query Enhancement ---
USE_QUERY_EXPANSION=true
USE_HYDE=true
HYDE_ALPHA=0.6
MAX_QUERY_EXPANSIONS=3

# --- Conversation ---
CONVERSATION_WINDOW_SIZE=6
MAX_SUMMARY_LENGTH=500

# --- Feedback ---
FEEDBACK_STORAGE_PATH=data/evaluation/feedback.json

# --- API ---
API_HOST=0.0.0.0
API_PORT=8000

# --- UI ---
STREAMLIT_PORT=8501
